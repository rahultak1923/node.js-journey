<!doctype html>
<html lang="en">
  <head> 
    <%- include('./partials/head')  %>
    <title>Blog</title>
</head>
<body>
    <%- include('./partials/nav')  %>
<div class="container mt-4">
    <h1><%= blog.title %></h1>
    <img src="<%= blog.coverImageURL %>" alt="" width="700px">
    <pre class="mt-3" style="white-space: pre-wrap; word-wrap: break-word;"><%= blog.body %></pre>
</div>
<div class="container mt-4 mb-4">
  <img src="<%= blog.createdBy.profileImageURL %>" alt="" width="50px" class="mx-4"><%= blog.createdBy.fullName %>

</div>
    <div class="container mt-3">
      <form action="/blog/comment/<%= blog._id %>" method="post">
        <h1>Comments (<%= comments.length %>)</h1>
        <% if (locals.user) { %>
         
          <div class="mb-3">
              <input type="text" class="form-control" id="content" name="content" aria-describedby="content">
  
          </div>
         
  
          <button type="submit" class="btn btn-primary">Submit</button>
        <% } %>
    </form>
    <div class="container mt-3 ">
      <% comments.forEach(comment => { %>
        <div class="mt-3 mb-3">
          <img src="<%= comment.createdBy.profileImageURL %>" alt="" width="50px" class="mx-4"><%= comment.createdBy.fullName %>: <span class="mx-4"> <%= comment.content %> </span> 

        </div>
      <% }) %>
    </div>
    </div>
    <%- include('./partials/scripts')  %>
  </body>
</html>